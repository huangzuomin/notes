        <p>&copy; 2025 温州新闻网文化频道AI赋能战略 (交互式报告)</p>
        <p class="text-sm opacity-80 mt-1">本应用根据相关研究报告生成，旨在提供信息概览与交互探索。</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Smooth scroll for navigation links
            const navLinks = document.querySelectorAll('#mainNav a[href^="#"]');
            navLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);
                    if (targetElement) {
                        // Offset for sticky nav
                        const navHeight = document.getElementById('mainNav').offsetHeight;
                        const elementPosition = targetElement.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - navHeight - 20; // 20px extra offset

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                        
                        // Update active link
                        navLinks.forEach(nav => nav.classList.remove('active'));
                        this.classList.add('active');
                    }
                });
            });

            // Active link on scroll
            const sections = document.querySelectorAll('section[id]');
            window.addEventListener('scroll', () => {
                let current = '';
                const navHeight = document.getElementById('mainNav').offsetHeight;
                sections.forEach(section => {
                    const sectionTop = section.offsetTop - navHeight - 25; // Adjust offset
                    if (pageYOffset >= sectionTop) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').substring(1) === current) {
                        link.classList.add('active');
                    }
                });
                 // If at top, set "引言" as active
                if (window.pageYOffset < sections[0].offsetTop - navHeight - 25) {
                     navLinks.forEach(nav => nav.classList.remove('active'));
                     document.querySelector('#mainNav a[href="#intro"]').classList.add('active');
                }
            });


            // Pillar cards toggle
            const pillarCards = document.querySelectorAll('.pillar-card');
            pillarCards.forEach(card => {
                card.addEventListener('click', function () {
                    this.querySelector('.pillar-content').classList.toggle('open');
                });
            });

            // Timeline items toggle
            const timelineContents = document.querySelectorAll('.timeline-content');
            timelineContents.forEach(content => {
                content.addEventListener('click', function() {
                    const phase = this.dataset.phase;
                    const detailsElement = document.getElementById(`phase-${phase}-details`);
                    if (detailsElement) {
                        detailsElement.classList.toggle('open');
                    }
                });
            });


            // Chart.js Tooltip and Label Configuration
            const chartTooltipTitleCallback = function(tooltipItems) {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                  return label.join(' ');
                }
                return label;
            };

            const commonChartOptions = (customOptions = {}) => ({
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: { 
                            color: '#4A4A4A',
                            font: { family: "'Noto Sans SC', sans-serif" }
                        }
                    },
                    tooltip: {
                        callbacks: { title: chartTooltipTitleCallback },
                        titleFont: { family: "'Noto Sans SC', sans-serif" },
                        bodyFont: { family: "'Noto Sans SC', sans-serif" },
                        backgroundColor: 'rgba(0,0,0,0.7)',
                        titleColor: '#FFFFFF',
                        bodyColor: '#FFFFFF',
                    }
                },
                scales: {
                    x: {
                        ticks: { 
                            color: '#4A4A4A',
                            font: { family: "'Noto Sans SC', sans-serif" }
                        },
                        grid: { display: false }
                    },
                    y: {
                        ticks: { 
                            color: '#4A4A4A',
                            font: { family: "'Noto Sans SC', sans-serif" }
                        },
                        grid: { color: '#EAE7E2' } // Light Warm Gray grid lines
                    }
                },
                ...customOptions
            });
            
            function processChineseLabels(labels, maxLength = 10) { // Adjusted for Chinese characters
                return labels.map(label => {
                    if (typeof label === 'string' && label.length > maxLength) {
                        let parts = [];
                        for (let i = 0; i < label.length; i += maxLength) {
                            parts.push(label.substring(i, i + maxLength));
                        }
                        return parts;
                    }
                    return label;
                });
            }

            // Chart 1: Content Structure (Illustrative)
            const contentCtx = document.getElementById('contentStructureChart')?.getContext('2d');
            if (contentCtx) {
                new Chart(contentCtx, {
                    type: 'doughnut',
                    data: {
                        labels: processChineseLabels(['转载内容', '原创内容']),
                        datasets: [{
                            label: '内容结构',
                            data: [75, 25], // Illustrative data: 75%转载, 25%原创
                            backgroundColor: ['#BDB5AD', '#6B7A6B'], // Warm Stone Gray, Muted Sage Green
                            borderColor: '#FFFFFF',
                            borderWidth: 3
                        }]
                    },
                    options: commonChartOptions({ cutout: '60%' })
                });
            }

            // Chart 2: Original Content Increase Target (Illustrative)
            const originalCtx = document.getElementById('originalContentChart')?.getContext('2d');
            if (originalCtx) {
                new Chart(originalCtx, {
                    type: 'bar',
                    data: {
                        labels: processChineseLabels(['当前原创比例', 'AI赋能后目标']),
                        datasets: [{
                            label: '原创内容占比 (%)',
                            data: [25, 70], // Illustrative: Current 25%, Target 70%
                            backgroundColor: ['#BDB5AD', '#6B7A6B'],
                            borderColor: ['#4A4A4A', '#4A4A4A'],
                            borderWidth: 1,
                            borderRadius: 4,
                            barPercentage: 0.6
                        }]
                    },
                    options: commonChartOptions({
                        scales: {
                            x: { ...commonChartOptions().scales.x },
                            y: { ...commonChartOptions().scales.y, suggestedMax: 100, title: { display: true, text: '百分比 (%)', color: '#4A4A4A'} }
                        },
                        plugins: { ...commonChartOptions().plugins, legend: { display: false } }
                    })
                });
            }
             // Set "引言" as active by default
            const introLink = document.querySelector('#mainNav a[href="#intro"]');
            if (introLink) {
                introLink.classList.add('active');
            }
        });
    </script>
</body>
</html>
